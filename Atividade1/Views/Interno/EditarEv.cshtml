@model Atividade1.ViewModels.Evento.EventoEvViewModel

<fieldset>
    <legend>Cadastro de evento</legend>
    <form method="post" asp-action="EditarEv" asp-controller="Interno" > 
        <input type="hidden" name="param" value="@Model.Ee.Id" />
        
        <div class="form-group">
            <label for="Descricao">Descrição:</label>
            <input type="text" class="form-control" id="Descricao" name="Descricao" value="@Model.Ee.Descricao" />
        </div>
        
        <div class="form-group">
            <label for="TipoEvento">Tipo evento:</label>
            <input type="text" class="form-control" id="TipoEvento" name="TipoEvento" value="@Model.Ee.TipoEvento" />
        </div>
        
        <div class="form-group">
            <label for="SituacaoEvento">Situação evento:</label>
            <input type="text" class="form-control" id="SituacaoEvento" name="SituacaoEvento" value="@Model.Ee.SituacaoEvento" />
        </div>
        
        <div class="form-group">
            <label for="Observacao">Observação:</label>
            <input type="text" class="form-control" id="Observacao" name="Observacao" value="@Model.Ee.Observacao" />
        </div>
        
        <div class="form-group">
            <label for="DataHinicio">Data hora inicio - Formato(01/01/0001 00:00:00): </label>
            <input type="text" class="form-control" id="DataHinicio" name="DataHinicio" value="@Model.Ee.DataHoraInicio" />
        </div>
        
        <div class="form-group">
            <label for="DataHtermino">Data hora termino - Formato(01/01/0001 00:00:00): </label>
            <input type="text" class="form-control" id="DataHtermino" name="DataHtermino" value="@Model.Ee.DataHoraTermino" />
        </div>
        
        <div class="form-group">               
            <button type="submit" class="btn btn-primary" >Editar</button>
        </div>
    </form>
 </fieldset>