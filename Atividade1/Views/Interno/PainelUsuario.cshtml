<img style="display: block; margin-left: auto; margin-right: auto;" src="/img/icone.png" alt="some text" width=100 height=100>
<br/>
<div style="margin: auto; width: 13%;">
    <a style="text-align: center;" asp-controller="Externo" asp-action="Index">Editar Foto de perfil</a>    
</div>
<br/>
<div class="d-flex justify-content-center">
    <div id="cardDados" class="card" style="width: 18rem;">
        <div class="card-header">
            Painel de Usuario
        </div>
        <div class="card-body">
            <div class="form-group">
                <label for="cpNome">Nome:</label>
                <input type="text" class="form-control" id="cpNome" value="*******" name="cpNome" aria-describedby="emailHelp">
                <a asp-controller="Externo" asp-action="Index">editar</a>
                <br/>
                <label for="cpEmail">Data de Nascimento:</label>
                <input type="text" class="form-control" id="cpData" value="**/**/****" name="cpData" aria-describedby="emailHelp">
                <a asp-controller="Externo" asp-action="Index">editar</a>
                <br/>
                <label for="cpEmail">Email:</label>
                <input type="text" class="form-control" id="cpEmail" value="*******" name="cpEmail" aria-describedby="emailHelp">
                <a asp-controller="Externo" asp-action="Index">editar</a>
                <br/>
                <label for="cpSenha">Senha:</label>
                <input type="text" class="form-control" id="cpSenha" value="*******" name="cpSenha" aria-describedby="emailHelp">
                <a asp-controller="Externo" asp-action="Index">editar</a>
                <br/>
                <br/>
                <button type="button" id="btn" name="btn" class="btn btn-primary">Salvar Alterações</button>
            </div>
        </div>
    </div>

</div>