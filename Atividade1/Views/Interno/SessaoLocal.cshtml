@model Atividade1.ViewModels.Local.LocalViewModel

<h1>Sessão Local</h1>

<div class="alert-success" >
    @if (@Model.MsgSucess != null)
    {
        <p style="text-align: center;">@Model.MsgSucess</p>
    }
</div>

<div class="alert-danger">
    @if (@Model.MsgFail != null)
    {
        <p style="text-align: center;">@Model.MsgFail</p>
    }
</div>

<table class="table table-striped">
   
     <fieldset>
        <legend>Cadastro de Local</legend>
        <form method="post" asp-action="SessaoLocal" asp-controller="Interno" > 
            <input type="hidden" name="param" value="cadastrar" />
            
            <div class="form-group">
                <label for="Nome">Nome:</label>
                <input type="text" class="form-control" id="Nome" name="Nome" />
            </div>
            
            <div class="form-group">
                <label for="Cidade">Cidade:</label>
                <input type="text" class="form-control" id="Cidade" name="Cidade" />
            </div>
            
            <div class="form-group">
                <label for="Bairro">Bairro/Local:</label>
                <input type="text" class="form-control" id="Bairro" name="Bairro" />
            </div>
            
            <div class="form-group">
                <label for="Capacidade">Capacidade:</label>
                <input type="text" class="form-control" id="Capacidade" name="Capacidade" />
            </div>

            <div class="form-group">               
                <button type="submit" class="btn btn-primary" >Salvar</button>
            </div>
        </form>
     </fieldset>
     <hr/>
     <fieldset>
     <legend>Pesquisar:</legend>
             <form method="POST" asp-action="SessaoLocalBusca" asp-controller="Interno" > 
                 <input type="hidden" name="param" value="pesquisar" />
                 <div class="row">
                     <div class="col">
                         <div class="form-group">
                             <label for="Nome">Nome:</label>
                             <input type="text" class="form-control" id="Nome" name="Nome" />
                         </div>
                     </div>
                     <div class="col">
                         <div class="form-group">
                             <label for="Bairro">Bairro/Rua:</label>
                             <input type="text" class="form-control" id="Bairro" name="Bairro" />
                         </div>
                     </div>
                 </div>
                 <div class="form-group">               
                     <button type="submit" class="btn btn-primary" >Buscar</button>
                 </div>
             </form>
     </fieldset>
     
     <legend>Locais</legend>    
     <thead>
     <tr>
         <th>Nome</th>
         <th>Cidade</th>
         <th>Bairro</th>
         <th>Capacidade</th>
         <th>Ação 1</th>
         <th>Ação 2</th>
     </tr>
     </thead>
     <tbody>
        @foreach(var lc in @Model.Locais)
        {
            <tr>
                <td>@lc.Nome</td>
                <td>@lc.Cidade</td>
                <td>@lc.Bairro</td>
                <td>@lc.Capacidade</td>
                <td><a asp-controller="Interno" asp-action="EditarLc" asp-route-id="@lc.Id" >Editar</a></td>
                <td><a asp-controller="Interno" asp-action="ExcluirLc" asp-route-id="@lc.Id">Excluir</a></td>
            </tr>
        }
     </tbody>
        
 </table>
